<div class="row">
  <a href="/" class="col-xs-3 btn btn-danger">戻る</a>
  <div class="col-xs-3 col-xs-offset-6 btn btn-danger">印刷</div>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4 text-center"><h2>受発注報告</h2></div>
</div>

<div class="row">
  <div class="col-sm-2 col-sm-offset-3 btn btn-default">検索</div>
  <%= link_to "新規登録", new_report_path ,class: "col-sm-2 col-sm-offset-2 btn btn-default"%>
</div>

<%= paginate @reports %>

<table class="table">
  <thead>
    <tr>
        <th>コード</th>
        <th>受注日</th>
        <th>納品日</th>
        <th>入金日</th>
        <th>氏名</th>
        <th>カナ</th>
        <th>故人名</th>
        <th>担当者</th>
        <th>登録日</th>
        <th>変更日</th>
    </tr>
  </thead>
  <tbody>
  <% @reports.each do |r| %>
    <tr>
      <td><%= link_to r.id,edit_report_path(r) %></td>
      <td><%= r.orderdate.strftime('%Y-%m-%d') %></td>
      <td><%= r.deliverydate.strftime('%Y-%m-%d') %></td>
      <td><%= r.payment.strftime('%Y-%m-%d') if r.payment.present? %></td>
      <td>
        <% if r.member_id %>
          <%= Member.find(r.member_id).name %>
        <% else %>
        <%= r.applicantlastname %><%= r.applicantfirstname %>
        <% end %>
      </td>
      <td>
        <% if r.member_id %>
          <%= Member.find(r.member_id).namekana %>
        <% else %>
        <%= r.applicantkana %>
        <% end %>
      </td> 
      <td><%= r.deceased %></td>
      <td><%= Employee.find(r.employee_id).name if r.employee_id.present? %></td>
      <td><%= r.created_at.in_time_zone('Tokyo').strftime("%Y-%m-%d") %></td>
      <td><%= r.updated_at.in_time_zone('Tokyo').strftime("%Y-%m-%d") %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

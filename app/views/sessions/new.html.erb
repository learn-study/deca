<% if logged_in? %>
  <p>ログイン完了ユーザ: <%= current_user.loginid %></p>
  <div class="row">
    <div class="col-xs-6">
      <div><%= link_to "会員ページ", members_path, class: "btn btn-success",style: "width:100%;" %></div>
    </div>
  </div>
  
<% else %>

<div class="text-center">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-4 col-sm-offset-4">

    <%= form_for(:session, url: login_path) do |f| %>

      <div class="form-group">
        <%= f.label :loginid, 'id' %>
        <%= f.text_field :loginid, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password, 'Password' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <%= f.submit 'Log in', class: 'btn btn-primary btn-block' %>
    <% end %>

  </div>
</div>

<% end %>
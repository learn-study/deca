<div class="row">
  <a href="/ledgers" class="col-xs-3 btn btn-danger">戻る</a>
  <div class="col-xs-3 col-xs-offset-6 btn btn-danger">印刷</div>
</div>
<div class="row">
  <div class="col-xs-4 col-xs-offset-4 text-center"><h2>葬儀売上原価・情報修正</h2></div>
</div>

<%= render "form", ledger: @ledger, eanings: @eanings, costs: @costs %>

<!-- モーダル・ダイアログ -->
<div class="modal fade" id="earningForm" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				<h4 class="modal-title">売上追加</h4>
			</div>
			<div class="modal-body">
			  <%= form_for(@earning) do |f| %>
			    <div clas="form-group">
			      <label>商品</label>
			      <%= f.text_field :item %>
          </div>
          
			    <div clas="form-group">
			    <%= hidden_field_tag :ledger_id, @ledger.id %>
  			    <label>数量</label>
  			    <%= f.text_field :quantity %>			    
          </div>
			    
			    <div clas="form-group">
  			    <label>単価</label>
  			    <%= f.text_field :price %>	    
          </div>
			    
			    <div clas="form-group">
  			    <label>課税方法</label>
  			    <%= f.text_field :taxclass %>		    
          </div>
			    
			</div>


			<div class="modal-footer">
			  <%= f.submit %>
			  <% end %>
			</div>			
		</div>
	</div>
</div>

<!-- モーダル・ダイアログ -->
<div class="modal fade" id="costForm" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal"><span>×</span></button>
				<h4 class="modal-title">原価追加</h4>
			</div>
			<div class="modal-body">
			  <%= form_for(@cost) do |f| %>
			    <div clas="form-group">
			      <label>仕入れ先</label>
			      <%= f.text_field :supplier %>
          </div>

			    <div clas="form-group">
  			    <label>商品</label>
  			    <%= f.text_field :item %>		    
          </div>

			    <div clas="form-group">
			    <%= hidden_field_tag :ledger_id, @ledger.id %>
  			    <label>数量</label>
  			    <%= f.text_field :quantity %>			    
          </div>
			    
			    <div clas="form-group">
  			    <label>単価</label>
  			    <%= f.text_field :price %>	    
          </div>
			    

			    
			</div>
			<div class="modal-footer">
			  <%= f.submit %>
			  <% end %>
			</div>			
		</div>
	</div>
</div>
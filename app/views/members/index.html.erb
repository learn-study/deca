<div class="row">
  <h2 class="col-xs-3" style="padding:0;margin:0;">会員</h2>
  <div><%= link_to "新規登録", new_member_path, class: "col-xs-3 col-xs-offset-1 btn btn-danger" %></div>
  <div class="col-xs-3 col-xs-offset-1 btn btn-danger">印刷</div>
</div>

<div class="row spacer">
  <div class="col-xs-12">
  <%= form_tag(members_path, method: :get, class: 'form-inline') do %>
    <%= text_field_tag :keyword, @keyword, class: 'form-control input-sm', placeholder: "キーワードを入力", size: 40 %>
    <%= submit_tag '検索', class: 'btn btn-success btn-sm' %>
  <% end %>
  <a class="col-xs-3 btn btn-defalut" data-toggle="modal" data-target="#serchModal">オプション検索</a>
  </div>
</div>

<div class="modal fade" id="serchModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">会員検索</h4>
        </div>
        <div class="modal-body">
          検索ﾌｫｰﾑ
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">検索</button>
        </div>
    </div>
  </div>
</div>

<% if @members.present? %>
<table class="table">
  <thead>
    <tr>
        <th>お名前</th>
        <!-- <th>カナ</th> -->
        <th>住所１</th>
        <!-- <th>住所2</th> -->
        <th>電話番号</th>
        <th>宗派</th>
        <th>会種</th>
    </tr>
  </thead>
  <tbody>
  <% @members.each do |m| %>
    <tr>
      <td><%= link_to m.lastname + " " + m.firstname, edit_member_path(m) %></td>
      <!-- <td><%#= m.namek %></td> -->
      <td><%= m.city %></td>
      <!-- <td><%#= m.address2 %></td> -->
      <td><%= m.tel %></td>
      <td><%= m.sect %></td>
      <td><%= m.kind %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<%= paginate @members %>
<% else %>

<div class="alert alert-danger spacer">
  ご入力のワードでは検索できませんでした。
</div>
<% end %>
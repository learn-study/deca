<%= form_for(remark) do |f| %>
  <%= hidden_field_tag :member_id, m.id %>
<div class="row">
  <div class="col-xs-6">
    <div class="form-group">
      <div class='input-group date' id='datetimepicker'>
        <%= f.text_field :date, class: "form-control input-sm" %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
      </div>
    </div>
  </div>
</div>

  <div class="form-group">
    <label class="left_column">内容</label>
    <%= f.text_area :content, rows: 4, cols: 40,class: "form-control input-sm" %>
  </div>
  <%= f.submit %>
<% end %>
<script>
  $(function () {
    $('#datetimepicker').datetimepicker({ 
      showTodayButton : true,
      showClose : true,
      format: 'YYYY-MM-DD'
      
    });
  });
</script>


